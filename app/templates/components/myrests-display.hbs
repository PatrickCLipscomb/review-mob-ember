{{#each restList.myRestaurants as |restaurant|}}
<div class="container">
  <div class="row">
    <div class="col-sm-2 col-sm-offset-5">
      <div align="middle" class="review restaurant-tile">
        <div class="restaurant-content">
          <img class="restaurant-image" src={{restaurant.image}} alt={{restaurant.name}} />
          <h3>{{restaurant.name}}</h3>
          <p>
            {{restaurant.cuisine}}
          </p>
          <span class="glyphicon glyphicon-trash" {{action 'removeRestaurant' restaurant}}></span>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
<div class="col-sm-2 col-sm-offset-5">
  {{#link-to 'user'}}
  <button class="btn btn-danger btn-lg rest-update">Return to Restaurant List</button>
  {{/link-to}}
</div>
